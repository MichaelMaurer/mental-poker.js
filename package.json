{
  "private": true,
  "name": "mental-poker",
  "version": "0.0.0",
  "description": "Mental Poker API based on the thesis of Choongmin Lee.",
  "author": "Kristóf Poduszló <kripod@protonmail.com>",
  "license": "MIT",
  "keywords": [
    "mental",
    "poker"
  ],
  "main": "./index.js",
  "browser": "./lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "directories": {
    "lib": "./lib"
  },
  "scripts": {
    "start": "cd ./bench && babel ./ | node",
    "build": "cross-env NODE_ENV=production babel ./src -d ./lib -s",
    "watch": "npm run build -- -w",
    "prepublish": "npm run build",
    "test": "nyc ava --require babel-core/register && eslint ./src",
    "coverage": "nyc report --reporter=text-lcov > ./coverage.lcov",
    "doc": "documentation build ./src/index.js -o ./docs -f html -g"
  },
  "dependencies": {
    "babel-runtime": "^6.9.0",
    "bn.js": "^4.11.3",
    "elliptic": "^6.2.7"
  },
  "devDependencies": {
    "ava": "^0.15.1",
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "benchmark": "^2.1.0",
    "cross-env": "^1.0.8",
    "documentation": "^4.0.0-beta4",
    "eslint": "^2.10.2",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.8.0",
    "nyc": "^6.4.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mental-poker/mental-poker-js.git"
  },
  "bugs": {
    "url": "https://github.com/mental-poker/mental-poker-js/issues"
  }
}
