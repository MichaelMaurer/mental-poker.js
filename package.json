{
  "private": true,
  "name": "mental-poker-api",
  "version": "0.1.0",
  "description": "Mental Poker API based on the thesis of Choongmin Lee.",
  "author": "Kristóf Poduszló <kripod@protonmail.com>",
  "license": "MIT",
  "keywords": [
    "mental",
    "poker"
  ],
  "main": "./lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "directories": {
    "lib": "./lib"
  },
  "scripts": {
    "start": "cd ./bench && babel ./ | node",
    "build": "cross-env NODE_ENV=production babel ./src -d ./lib -s",
    "watch": "npm run build -- -w",
    "prepublish": "npm run build",
    "test": "cross-env NODE_ENV=test nyc ava --verbose && eslint ./src ./test ./bench",
    "coverage": "nyc report -r text-lcov -r html > ./coverage.lcov",
    "doc": "documentation build ./src/index.js -o ./docs -f html -g"
  },
  "dependencies": {
    "babel-runtime": "^6.9.2",
    "bn.js": "^4.11.5",
    "elliptic": "^6.3.1",
    "es6-error": "^3.0.1",
    "pokersolver": "^2.1.2"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-plugin-istanbul": "^1.0.3",
    "babel-plugin-syntax-flow": "^6.8.0",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-flow-strip-types": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-plugin-typecheck": "^3.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2016": "^6.11.3",
    "babel-preset-stage-2": "^6.11.0",
    "babel-register": "^6.11.5",
    "benchmark": "^2.1.1",
    "cross-env": "^2.0.0",
    "documentation": "^4.0.0-beta9",
    "eslint": "^3.1.1",
    "eslint-config-airbnb-base": "^5.0.0",
    "eslint-plugin-flowtype": "^2.3.1",
    "eslint-plugin-import": "^1.12.0",
    "nyc": "^7.1.0"
  },
  "ava": {
    "babel": "inherit"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mental-poker/mental-poker-api-js.git"
  },
  "bugs": {
    "url": "https://github.com/mental-poker/mental-poker-api-js/issues"
  }
}
